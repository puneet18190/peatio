javascript:
  $(".loginbtn").click(function(e){
    e.preventDefault();
    e.stopPropagation();
    if($('input[name=radio-group]:checked').val() == undefined){
      alert("Select wallet");
    }else if($('input[type=checkbox]:checked').val() == undefined){
      alert("Select currency.");
    }else{
      $($("form")[0]).submit()
    }
  })