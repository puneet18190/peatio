<div class="container">
  <h2>Edit story</h2>
  <form method="post" action="/newsadmin/update_story">
    <input type="hidden" id="id" value="<%=@story.id%>" name="id">
    <div class="form-group">
      <label for="title">Title:</label>
      <input type="text" class="form-control" id="title" value="<%=@story.title%>" name="title">
    </div>
    <div class="form-group">
      <label for="body">Body:</label>
      <textarea class="form-control" rows="10" id="body" name="body"><%=@story.body_raw%></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Update story</button>
  </form>
</div>
